/**
 * 弹层选择数据模板
 * 适用场景：在弹层中选择数据（单选/多选）
 * 核心组件：Dialog + CRUD (selectable)
 */
{
  "type": "page",
  "body": {
    "type": "button",
    "label": "选择数据",
    "actionType": "dialog",
    "dialog": {
      "title": "选择数据",
      "size": "lg",
      "body": {
        "type": "crud",
        "name": "selectTable",
        "api": "/api/select-data",
        "selectable": true,
        "multiple": false,
        "columns": [
          {"name": "id", "label": "ID"},
          {"name": "name", "label": "名称"},
          {"name": "code", "label": "编码"}
        ],
        "headerToolbar": [
          {
            "type": "input-text",
            "name": "keyword",
            "placeholder": "搜索...",
            "addOn": {
              "type": "button",
              "label": "搜索",
              "icon": "fa fa-search"
            }
          }
        ]
      },
      "actions": [
        {
          "type": "button",
          "label": "取消",
          "actionType": "cancel"
        },
        {
          "type": "button",
          "label": "确认",
          "level": "primary",
          "onEvent": {
            "click": {
              "actions": [
                {
                  "actionType": "toast",
                  "args": {
                    "msgType": "success",
                    "msg": "已选择：${selectTable.selectedItems[0].name}"
                  }
                },
                {
                  "actionType": "close"
                }
              ]
            }
          }
        }
      ]
    }
  }
}
