{
  "type": "page",
  "title": "登录",
  "subTitle": "欢迎回来",
  "body": {
    "type": "form",
    "mode": "horizontal",
    "api": "post:/api/login",
    "redirectTo": "/dashboard",
    "body": [
      {
        "type": "input-text",
        "name": "username",
        "label": "用户名",
        "required": true,
        "placeholder": "请输入用户名"
      },
      {
        "type": "input-password",
        "name": "password",
        "label": "密码",
        "required": true,
        "placeholder": "请输入密码"
      },
      {
        "type": "checkbox",
        "name": "remember",
        "label": "记住我",
        "option": "30天内免登录"
      },
      {
        "type": "submit",
        "label": "登录",
        "level": "primary"
      }
    ]
  }
}
